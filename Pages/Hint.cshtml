@page "/hints"
@model Tarjimator.Pages.HintModel
@{ 
    Layout = "_Layout";
    ViewBag.Title = "Hints - The Tarjimator";
}

<div class="flex flex-col justify-center">
    <div class="px-10 py-7 grid grid-cols-2">
        <div>
            <a asp-page="Index"><p class="text-3xl md:text-6xl dark:text-white">The Tarjimator</p></a>
            <p class="text-sm md:text-base dark:text-white pt-2 pl-1 md:pt-3">Symbol mapping table</p>
        </div>
        <div>
            <a asp-page="Index">
                <div class="float-right w-fit px-3 md:px-6 py-2 rounded bg-green-500 hover:bg-green-700 mt-3 text-white dark:text-zinc-800 dark:hover:text-slate-200">
                    Back home
                </div>
            </a>
        </div>
    </div>
    <div class="px-10 py-3">
        <div id="hintsTable" class="mb-10 grid grid-cols-2 justify-between md:grid-cols-8" onload="emergeFunc()" style="opacity: 0;">
            @foreach(var kv in Model.Lookups)
            {
                if ((new string[] {"ь", "э", "ю", "я"}).Contains(kv.Value))
                {
                    <div class="bg-green-500 hover:bg-green-700 text-white dark:text-zinc-800 dark:hover:text-slate-200 text-xl md:text-2xl text-center rounded px-3 py-4 md:py-11 my-2 md:my-4 mx-2">
                        @kv.Key => @kv.Value
                    </div>
                }
                else 
                {
                    <div class="bg-green-500 hover:bg-green-700 text-white dark:text-zinc-800 dark:hover:text-slate-200 text-xl md:text-2xl text-center rounded px-3 py-4 my-2 md:my-4 mx-2">
                        @kv.Key => @kv.Value
                    </div>
                }
            }
            <div class="col-span-2 md:col-span-4 bg-green-500 hover:bg-green-700 text-white 
                dark:text-zinc-800 dark:hover:text-slate-200 dark:hover:text-slate-200 text-xl 
                md:text-2xl text-center rounded px-3 py-4 my-4 mx-2">
                Enclose the text <br/> &#60;&#33;&#45;&#45;this way&#45;&#45;&#62;<br />to leave it as is
            </div>
        </div>
    </div>
</div>

<script>
    let emergeAnimation = anime({
        targets: '#hintsTable',
        opacity: 1.0,
        duration: 2723,
        easing: 'easeOutQuad'
    });

    function emergeFunc() { emergeAnimation.play() }
</script>